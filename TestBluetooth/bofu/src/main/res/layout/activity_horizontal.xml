<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_height="match_parent">

    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:background="@drawable/chuang_shang"
        android:layout_width="240dp"
        android:layout_height="8dp"/>

    <FrameLayout
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:layout_width="230dp"
        android:layout_height="240dp">

        <ImageView
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:src="@drawable/chuang"
            android:scaleType="fitXY"
            android:visibility="visible"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:visibility="visible"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:src="@drawable/ling"
                android:scaleType="fitXY"
                android:visibility="visible"
                android:layout_height="match_parent" />

            <ImageView
                android:layout_toRightOf="@+id/img"
                android:layout_marginLeft="-20dp"
                android:background="@drawable/la"
                android:layout_width="20dp"
                android:layout_height="match_parent"/>
        </RelativeLayout>

        <HorizontalScrollView
            android:id="@+id/scrollView"
            android:scrollbars="none"
            android:visibility="visible"
            android:overScrollMode="never"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="460dp"
                android:orientation="horizontal"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="460dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>

        </HorizontalScrollView>

    </FrameLayout>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/love"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="165dp"/>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="125dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="10dp"
            android:clickable="true"
            android:src="@drawable/jian"
            android:onClick="jian"/>

        <SeekBar
            android:id="@+id/seek_bar"
            android:max="100"
            android:progress="100"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="10dp"
            android:clickable="true"
            android:src="@drawable/add"
            android:onClick="add"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="108dp"  />

    <Button
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:onClick="autoOpen"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/left"
        android:layout_marginLeft="35dp"
        android:textColor="#ffffff"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="43dp" />

    <Button
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:onClick="stop"
        android:layout_alignParentBottom="true"
        android:background="@drawable/stop"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp"  />

    <Button
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:onClick="autoClose"
        android:background="@drawable/right"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="43dp"  />

</RelativeLayout>
