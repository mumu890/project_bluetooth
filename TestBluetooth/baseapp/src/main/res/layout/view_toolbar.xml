<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:id="@+id/rl_toobar_bg"
    android:paddingBottom="5dp"
    android:background="@drawable/toolbar_bg">

    <ImageView
        android:id="@+id/iv_left"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:paddingLeft="14dp"
        android:layout_marginLeft="1dp"
        android:paddingRight="14dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:background="@drawable/select_toolbar_bg"
        android:clickable="true"
        android:visibility="visible"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/btn_left"
        android:layout_width="60dp"
        android:layout_height="33dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="13dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/selector_toolbar_btn_bg"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/test"
        android:textColor="@color/color_6b6f74"
        android:textSize="13sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/iv_left"
        android:layout_toRightOf="@+id/iv_left"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/app_name"
        android:singleLine="true"
        android:textColor="@color/color_475259"
        android:textSize="19sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:clickable="true"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textColor="@color/color_475259"
        android:textSize="19sp"
        android:singleLine="true"
        android:text="@string/app_name"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:visibility="gone" />


    <TextView
        android:id="@+id/tv_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/select_toolbar_bg"
        android:clickable="true"
        android:gravity="right"
        android:layout_marginTop="12dp"
        android:paddingRight="16dp"
        android:singleLine="true"
        android:textColor="@color/color_475259"
        android:textSize="19sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/btn_right"
        android:layout_width="61dp"
        android:layout_height="33dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/selector_toolbar_btn_bg"
        android:clickable="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_marginRight="15dp"
        android:textColor="@color/color_6b6f74"
        android:textSize="13sp"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/iv_right1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:paddingLeft="14dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingRight="14dp"
        android:layout_marginLeft="1dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/iv_right0"
        android:layout_toStartOf="@+id/iv_right0"
        android:background="@drawable/select_toolbar_bg"
        android:clickable="true"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_right0"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:layout_marginRight="1dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/select_toolbar_bg"
        android:clickable="true"
        android:visibility="gone" />

</RelativeLayout>
